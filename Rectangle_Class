class rectangle
{
    double l,b;
    rectangle(double l,double b)
    {
        this.l=l;
        this.b=b;
        
    }
    public double area()
    {
        return l*b;
    }
    public double perimeter()
    {
        return 2*(l+b);
    }
    public static void main(String args[])
    {
        rectangle obj=new rectangle(2.5,1.7);
        System.out.println("Area = "+ obj.area());
         System.out.println("Perimeter = " +obj.perimeter());
    }
}
